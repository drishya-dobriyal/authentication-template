<!-- Link Css file -->
<link rel="stylesheet" href="/css/form.css" />
<!-- Form Container -->
<section id="form-container">
  <!-- Form Heading -->
  <section id="form-heading">
    <h1>Sign In</h1>
    <!-- Show Error message  if present -->
    <% if(locals.error_message && locals.error_message.length > 0) { %>
    <div id="show-error-msg"><%= locals.error_message %></div>
    <% } %>
  </section>

  <!-- Form Input -->
  <section id="form-input">
    <!-- Form  -->
    <form action="/users/create-session" method="POST">
      <input type="email" name="email" placeholder="Email" required />
      <input type="password" name="password" placeholder="Password" required />
      <input type="submit" value="Sign In" />
    </form>
  </section>

  <!-- Navigation for Routes -->
  <section id="navigation">
    <div><a href="/users/auth/google">Google Sign-up</a></div>
    <div><a href="/users/sign-up">New User</a></div>
    <div><a href="/users/forgot-password">Forgot Password</a></div>
  </section>
</section>
